        var div = document.querySelector('#container');

        var PSV = new PhotoSphereViewer({
            panorama: 'images/hotel4.jpg',//全景图的路径
            container: div,//放置全景图的容器
            autoload: true,//是否自动加载
            usexmpdata: true,//如果全景图必须读入XMP则为true
